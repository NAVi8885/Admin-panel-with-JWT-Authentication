<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - Users</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container-card {
      max-width: 900px;
      margin: 40px auto;
      background-color: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .btn-block {
      background-color: #6c757d;
      color: white;
    }
    .btn-block:hover {
      background-color: #5a6268;
    }
    .btn-update {
      background-color: #6f42c1;
      color: white;
    }
    .btn-update:hover {
      background-color: #5a32a3;
    }
    .btn-delete {
      background-color: #dc3545;
      color: white;
    }
    .btn-delete:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
<div class="d-flex justify-content-between p-3 bg-light border-bottom">
  <h1 class="text-primary">Admin pannel</h1>
  <form action="/logout/admin" method="POST">
    <button type="submit" class="btn btn-danger">
      ðŸšª Logout
    </button>
  </form>
</div>
  <div class="container container-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>Users List</h3>
      <a href="/admin/user/add" class="btn btn-success">+ Add User</a>
    </div>

    <table class="table table-hover">
      <thead class="table-light">
        <tr>
          <th>SL No</th>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (users && users.length > 0) { %>
          <% users.forEach((users, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= users.name %></td>
              <td><%= users.email %></td>
             <td class="<%= users.isBlock ? 'text-danger' : 'text-success'  %> fs-5">
              <%= users.isBlock ? 'blocked' : 'active' %>
            </td>

              <td>
                <a href="/admin/user/block/<%= users._id %>" class="btn btn-sm btn-block me-1"><%= users.isBlocked?'UnBlock':'Block'%></a>
                <a href="/admin/user/edit/<%=users._id%>" class="btn btn-sm btn-update me-1">Update</a>
                <a href="/admin/user/delete/<%= users._id %>" class="btn btn-sm btn-delete">Delete</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No users found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  window.addEventListener("pageshow", function (event) {
    if (event.persisted) {
      window.location.reload();
    }
  });
</script>
</body>
</html>
